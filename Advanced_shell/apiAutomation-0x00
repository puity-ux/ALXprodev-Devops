#!/bin/bash

# URL for Pikachu data from PokÃ©mon API
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check HTTP status code
if [ "$response" -ne 200 ]; then
    echo "Failed to fetch data from API. HTTP status code: $response" >> "$ERROR_FILE"
    rm -f "$OUTPUT_FILE"
else
    echo "Data successfully saved to $OUTPUT_FILE"
fi
